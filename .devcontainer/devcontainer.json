{
	"image": "ghcr.io/juliushaertl/nextcloud-dev-php80:latest",
	"forwardPorts": [80],
	"containerEnv": {
		"NEXTCLOUD_AUTOINSTALL_APPS": "tables",
		"XDEBUG_MODE": "debug"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"felixfbecker.php-intellisense",
				"octref.vetur"
			],
			"settings": {
				"php.suggest.basic": false,
				"git.alwaysSignOff": true
			}
		}
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/var/www/html/apps-extra/tables,type=bind",
	"workspaceFolder": "/var/www/html/apps-extra/tables",
	"overrideCommand": true,
	"postAttachCommand": "bash ./.devcontainer/setup.sh",
	"portsAttributes": {
		"80": {
			"label": "Webserver"
		}
	}
}
