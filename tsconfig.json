{
	"extends": "@vue/tsconfig/tsconfig.json",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "vendor"],
	"compilerOptions": {
		"outDir": "./js",
		"allowJs": true,
		"checkJs": true,
		"allowImportingTsExtensions": true,
		"lib": ["ESNext"],
	},
	"vueCompilerOptions": {
		"target": 2.7,
	}
}
