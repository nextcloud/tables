{
	"extends": "@vue/tsconfig",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "vendor"],
	"compilerOptions": {
		"outDir": "./js",
		"allowJs": true,
		"checkJs": true,
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["DOM", "ESNext"],
		"noEmit": true,
		"plugins": [
			{ "name": "typescript-plugin-css-modules" }
		],
		"sourceMap": true
	},
	"vueCompilerOptions": {
		"target": 2.7,
	},
	"ts-node": {
		"compilerOptions": {
			"module": "ESNext",
			"moduleResolution": "Node"
		}
	}
}
